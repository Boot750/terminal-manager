<idea-plugin>
    <id>org.nanoya.terminal-manager</id>
    <name>Terminal Manager</name>
    <version>1.2.0</version>
    <vendor email="support@nanoya.org" url="https://github.com/nanoya">Nanoya</vendor>

    <description><![CDATA[
    Customize which terminal tabs open on project startup and configure their working directories and shell types.
    <br><br>
    Features:
    <ul>
        <li>Configure multiple terminal tabs to open automatically on project startup</li>
        <li>Choose shell type per tab (PowerShell, WSL/Ubuntu, CMD, Git Bash, etc.)</li>
        <li>Set custom working directories (relative to project root)</li>
        <li>Run startup commands when terminals open (with security-focused opt-in trust model)</li>
        <li>Split terminals with easy keyboard shortcuts (Alt+Shift+V/H)</li>
        <li>Navigate between splits (Alt+Shift+N/P) and unsplit (Alt+Shift+U)</li>
        <li>Name your terminal tabs for easy identification</li>
        <li>Reorder tabs with up/down controls</li>
        <li>Per-project configuration stored in <code>.terminals/startup-terminals.json</code></li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
    <b>1.2.0</b>
    <ul>
        <li>Added startup commands - execute a command when terminal opens</li>
        <li>Security-focused opt-in model: commands only run if project is explicitly trusted</li>
        <li>Trust setting stored locally per-machine, not in project config</li>
        <li>Warning banner in settings when commands exist but project isn't trusted</li>
        <li>Added terminal split shortcuts with easy-to-remember keys:</li>
        <li>Alt+Shift+V: Split Right, Alt+Shift+H: Split Down</li>
        <li>Alt+Shift+U: Unsplit, Alt+Ctrl+Shift+U: Unsplit All</li>
        <li>Alt+Shift+'/;: Navigate to Next/Previous split pane</li>
    </ul>
    <em>Note: Terminal split/group handling is experimental and built for the Reworked Terminal engine in IntelliJ 2025.
    These features may not work correctly with the classic terminal engine.</em>
    <b>1.1.0</b>
    <ul>
        <li>Added keyboard shortcuts to switch terminal tabs (Alt+Shift+1-9)</li>
        <li>Added next/previous tab navigation (Alt+Shift+] and Alt+Shift+[)</li>
        <li>All shortcuts customizable via Settings > Keymap</li>
    </ul>
    <b>1.0.3</b>
    <ul>
        <li>Added plugin icon</li>
        <li>Fixed EDT threading issue on startup</li>
    </ul>
    <b>1.0.2</b>
    <ul>
        <li>Plugin now displays its own toolbar buttons instead of overwriting the terminal gear menu</li>
        <li>New console icon for settings button</li>
        <li>Added reset button to close all terminals and reopen configured startup terminals</li>
        <li>Reset confirmation dialog with "Don't ask again" option</li>
    </ul>
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.nanoya.terminalmanager.settings.TrustedProjectsSettings"/>
        <applicationService serviceImplementation="org.nanoya.terminalmanager.settings.TerminalManagerAppSettings"/>
        <projectService serviceImplementation="org.nanoya.terminalmanager.settings.TerminalManagerSettings"/>

        <applicationConfigurable
                parentId="tools"
                instance="org.nanoya.terminalmanager.settings.TerminalManagerAppConfigurable"
                id="org.nanoya.terminalmanager.settings.TerminalManagerAppConfigurable"
                displayName="Terminal Manager"/>

        <projectConfigurable
                parentId="tools"
                groupId="terminal"
                instance="org.nanoya.terminalmanager.settings.TerminalManagerConfigurable"
                id="org.nanoya.terminalmanager.settings.TerminalManagerConfigurable"
                displayName="Startup Terminals"/>

        <postStartupActivity implementation="org.nanoya.terminalmanager.TerminalStartupActivity"/>
        <postStartupActivity implementation="org.nanoya.terminalmanager.TerminalGearActionInstaller"/>
    </extensions>

    <actions>
        <action id="TerminalManager.OpenSettings"
                class="org.nanoya.terminalmanager.actions.OpenSettingsAction"
                text="Terminal Manager: Startup Settings"
                description="Configure terminal tabs that open on project startup"
                icon="AllIcons.Debugger.Console">
            <!-- Add to Tools menu -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="TerminalManager.ResetTerminals"
                class="org.nanoya.terminalmanager.actions.ResetTerminalsAction"
                text="Terminal Manager: Reset Terminals"
                description="Close all terminals and reopen configured startup terminals"
                icon="AllIcons.Actions.Restart">
        </action>

        <!-- Terminal tab switching actions -->
        <action id="TerminalManager.SwitchToTab1"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab1Action"
                text="Terminal Manager: Switch to Tab 1"
                description="Switch to the first terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 1"/>
        </action>
        <action id="TerminalManager.SwitchToTab2"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab2Action"
                text="Terminal Manager: Switch to Tab 2"
                description="Switch to the second terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 2"/>
        </action>
        <action id="TerminalManager.SwitchToTab3"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab3Action"
                text="Terminal Manager: Switch to Tab 3"
                description="Switch to the third terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 3"/>
        </action>
        <action id="TerminalManager.SwitchToTab4"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab4Action"
                text="Terminal Manager: Switch to Tab 4"
                description="Switch to the fourth terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 4"/>
        </action>
        <action id="TerminalManager.SwitchToTab5"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab5Action"
                text="Terminal Manager: Switch to Tab 5"
                description="Switch to the fifth terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 5"/>
        </action>
        <action id="TerminalManager.SwitchToTab6"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab6Action"
                text="Terminal Manager: Switch to Tab 6"
                description="Switch to the sixth terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 6"/>
        </action>
        <action id="TerminalManager.SwitchToTab7"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab7Action"
                text="Terminal Manager: Switch to Tab 7"
                description="Switch to the seventh terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 7"/>
        </action>
        <action id="TerminalManager.SwitchToTab8"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab8Action"
                text="Terminal Manager: Switch to Tab 8"
                description="Switch to the eighth terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 8"/>
        </action>
        <action id="TerminalManager.SwitchToTab9"
                class="org.nanoya.terminalmanager.actions.SwitchToTerminalTab9Action"
                text="Terminal Manager: Switch to Tab 9"
                description="Switch to the ninth terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift 9"/>
        </action>

        <!-- Terminal tab navigation actions -->
        <action id="TerminalManager.NextTerminalTab"
                class="org.nanoya.terminalmanager.actions.NextTerminalTabAction"
                text="Terminal Manager: Next Tab"
                description="Switch to the next terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift CLOSE_BRACKET"/>
        </action>
        <action id="TerminalManager.PreviousTerminalTab"
                class="org.nanoya.terminalmanager.actions.PreviousTerminalTabAction"
                text="Terminal Manager: Previous Tab"
                description="Switch to the previous terminal tab">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift OPEN_BRACKET"/>
        </action>

        <!-- Terminal split actions -->
        <action id="TerminalManager.SplitRight"
                class="org.nanoya.terminalmanager.actions.SplitTerminalRightAction"
                text="Terminal Manager: Split Right"
                description="Split the current terminal to the right"
                icon="AllIcons.Actions.SplitVertically">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift V"/>
        </action>
        <action id="TerminalManager.SplitDown"
                class="org.nanoya.terminalmanager.actions.SplitTerminalDownAction"
                text="Terminal Manager: Split Down"
                description="Split the current terminal downward"
                icon="AllIcons.Actions.SplitHorizontally">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift H"/>
        </action>
        <action id="TerminalManager.MoveRight"
                class="org.nanoya.terminalmanager.actions.MoveTerminalRightAction"
                text="Terminal Manager: Move to Right Split"
                description="Move the current terminal to a split on the right"
                icon="AllIcons.Actions.SplitVertically">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ctrl shift V"/>
        </action>
        <action id="TerminalManager.MoveDown"
                class="org.nanoya.terminalmanager.actions.MoveTerminalDownAction"
                text="Terminal Manager: Move to Bottom Split"
                description="Move the current terminal to a split below"
                icon="AllIcons.Actions.SplitHorizontally">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ctrl shift H"/>
        </action>
        <action id="TerminalManager.Unsplit"
                class="org.nanoya.terminalmanager.actions.UnsplitTerminalAction"
                text="Terminal Manager: Unsplit"
                description="Remove the current terminal split"
                icon="AllIcons.General.CollapseComponent">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift U"/>
        </action>
        <action id="TerminalManager.UnsplitAll"
                class="org.nanoya.terminalmanager.actions.UnsplitAllTerminalsAction"
                text="Terminal Manager: Unsplit All"
                description="Remove all terminal splits"
                icon="AllIcons.General.CollapseComponent">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ctrl shift U"/>
        </action>
        <action id="TerminalManager.GotoNextSplit"
                class="org.nanoya.terminalmanager.actions.GotoNextSplitAction"
                text="Terminal Manager: Go to Next Split"
                description="Navigate to the next terminal split pane">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift QUOTE"/>
        </action>
        <action id="TerminalManager.GotoPreviousSplit"
                class="org.nanoya.terminalmanager.actions.GotoPreviousSplitAction"
                text="Terminal Manager: Go to Previous Split"
                description="Navigate to the previous terminal split pane">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift SEMICOLON"/>
        </action>
    </actions>
</idea-plugin>
